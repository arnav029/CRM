<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Message Status</title>
  <link rel="stylesheet" href="/public/status.css">
</head>
<body>

  <header>
    <div class="container">
      <div class="title">
        <h1>Message Status</h1>
      </div>
      <nav class="top-right">
        <button onclick="window.location.href = '/logout'" class="logout-button">Logout</button>
      </nav>
    </div>
  </header>
  <table>
    <thead>
      <tr>
        <th>Campaign ID</th>
        <th>Customer Email</th>
        <th>Customer Name</th>
        <th>Message Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each results}}
      <tr>
        <td>{{this.campaignId}}</td>
        <td>{{this.email}}</td>
        <td>{{this.name}}</td>
        <td>{{this.status}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>
